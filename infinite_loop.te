policy_module(infinite_loop, 1.0)

require {
        type unconfined_t;
        class file { execute open read };
}

type infinite_loop_file_t;

fs_associate(infinite_loop_file_t);

allow unconfined_t infinite_loop_file_t:file relabelto;

neverallow unconfined_t self:file execute;

neverallow unconfined_t infinite_loop_file_t:file { execute open read };

files_type(infinite_loop_file_t)
